<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/bigger_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/indigo"
                android:gravity="end|center_vertical"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingEnd="30dp"
                android:paddingRight="30dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvLower"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignEnd="@id/tvHeader"
                android:layout_alignStart="@id/tvHeader"
                android:layout_below="@id/tvHeader"
                android:background="@color/indigo_light" />

            <ImageView
                android:id="@+id/ivEventMember"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:background="@color/white"
                android:padding="2dp" />

            <TextView
                android:id="@+id/tvEventSpeaker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvHeader"
                android:layout_gravity="center"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="128dp"
                android:textColor="@color/indigo_dark"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvEventTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/tvHeader"
                android:layout_alignStart="@id/tvHeader"
                android:layout_below="@id/tvHeader"
                android:layout_gravity="center"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="72dp"
                android:lines="3"
                android:ellipsize="end"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/ivClock"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/tvEventTopic"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_clock" />

            <TextView
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ivClock"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/ivClock"
                android:textAppearance="@color/md_black_1000"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_below="@id/ivClock"
                android:layout_marginStart="40dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tvEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ivLocation"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/ivLocation"
                android:textAppearance="@color/md_black_1000"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:id="@+id/vLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignStart="@id/ivClock"
                android:layout_below="@id/tvEventLocation"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:background="@color/primary_material_light" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignEnd="@id/tvLower"
                android:layout_below="@id/vLine"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="16dp"
                android:gravity="end"
                android:src="@drawable/ic_action_share" />

            <ImageView
                android:id="@+id/ivFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignTop="@id/ivShare"
                android:layout_below="@id/vLine"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/ivShare"
                android:gravity="end"
                android:src="@drawable/ic_action_favorite" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>