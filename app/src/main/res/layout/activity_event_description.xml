<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.csix.android.csix.activities.EventDescriptionActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:minHeight="?attr/actionBarSize" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dToolbar"
        android:id="@+id/cardTitle"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/eventDescriptionTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/dToolbar"

            android:gravity="center"
            android:textColor="@color/indigo"
            android:textSize="20sp"
            android:layout_margin="16dp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardTitle"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/eventDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/eventDescriptionTitle"

            android:scrollbars="vertical"
            android:layout_margin="16dp" />
    </android.support.v7.widget.CardView>
</RelativeLayout>
